<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robot.maker.proyecto.ExamPracticoVectorsActivity">

    <!-- This code was made by Cesar Uriel Coto Coazozon and the help of Jose Manuel CoutiÃ±o Vazques -->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_padding_16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cont_vec"
                    android:layout_marginBottom="@dimen/margin_button_exam">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pregunta1_exam_vec"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta1_1_examen_vec"
                    android:hint="@string/newtons"
                    android:inputType="number"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta1_2_examen_vec"
                    android:hint="@string/grad"
                    android:inputType="number"/>


                <TextView
                    android:layout_marginTop="@dimen/dimen_padding_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/problema2_exam_vec"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta2_1_examen_vec"
                    android:hint="@string/metros"
                    android:inputType="number"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta2_2_examen_vec"
                    android:hint="@string/grad"
                    android:inputType="number"/>


                <TextView
                    android:layout_marginTop="@dimen/dimen_padding_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/problema3_exam_vec"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta3_1_examen_vec"
                    android:hint="@string/centimetros"
                    android:inputType="number"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta3_2_examen_vec"
                    android:hint="@string/grad"
                    android:inputType="number"/>


                <TextView
                    android:layout_marginTop="@dimen/dimen_padding_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/problema4_exam_vec"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta4_1_examen_vec"
                    android:hint="@string/centimetros"
                    android:inputType="number"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta4_2_examen_vec"
                    android:hint="@string/grad"
                    android:inputType="number"/>


                <Button
                    android:id="@+id/button_calificar_examen_vectores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/calificar_title"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/text_color"
                    tools:targetApi="lollipop" />



                </LinearLayout>

            </ScrollView>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/design_bottom_sheet_vectors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_vectores"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/dimen_peekheight_50dp"
        app:elevation="@dimen/dimen_4dp"
        app:layout_behavior="@string/bottom_sheet_behavior">


        <TextView
            android:id="@+id/textView_help_exam_vectores"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_peekheight_50dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="@string/help_text"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_text_help" />


        <TextView
            android:id="@+id/formula1_vec"
            android:layout_below="@id/textView_help_exam_vectores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="@string/formula1_vec"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_text_help" />

        <TextView
            android:id="@+id/formula2_vec"
            android:layout_below="@id/formula1_vec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="@string/formula2_vec"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_text_help" />

        <TextView
            android:id="@+id/formula3_vec"
            android:layout_below="@id/formula2_vec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="@string/formula3_vec"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_text_help" />

        <TextView
            android:id="@+id/formula4_vec"
            android:layout_below="@id/formula3_vec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="@string/formula4_vec"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_text_help" />

        <TextView
            android:id="@+id/formula5_vec"
            android:layout_below="@id/formula4_vec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="@string/formula5_vec"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_text_help" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>