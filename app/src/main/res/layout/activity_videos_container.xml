<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.robot.maker.proyecto.VideosContainerActivity">


    <ImageView
        android:id="@+id/imageView_videos_no_conexion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:contentDescription="@string/no_hay_conexcion"
        app:srcCompat="@drawable/sin_internet_img" />

    <WebView
        android:id="@+id/webview_videos_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
